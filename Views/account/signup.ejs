<div class="container">

    <div class="col-sm-6 col-sm-offset-3">

      <h1><span class="fa fa-sign-in"></span>Signup</h1>

      <!-- login form -->
      <form id="signup" name="signup" method="post" action="/account/signup">
        <div class="form-group">
          <label for="email" class="blue-text">Email</label>
          <input class="text form-control" name="email" type="email">
        </div>
        <div class="form-group">
          <label for="password" class="blue-text">Password</label>
          <input type="password" name="password" class="form-control">
        </div>
        <button type="submit" class="blue btn btn-warning btn-lg">Signup</button>
      </form>

      <p>Already have account?<a href="/login">Login</a></p>
      <p>Or go <a href="/">home</a>.</p>

    </div>
  </div>